{
  "name": "eslint-config-ccrazy88-react",
  "version": "1.0.0",
  "description": "A personalized, shareable ESLint configuration.",
  "license": "MIT",
  "author": "Chrisna Aing <chrisna@chrisna.org>",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazy88/eslint-config-ccrazy88-react.git"
  },
  "scripts": {
    "precommit": "npm run test && lint-staged",
    "test": "npm run conflicting-rules && npm run unused-rules",
    "conflicting-rules":
      "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "unused-rules": "eslint-find-rules --unused ./index.js"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "dependencies": {
    "eslint-config-ccrazy88": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-find-rules": "^3.1.1",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2"
  },
  "peerDependencies": {
    "eslint": "^4.15.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1"
  }
}
